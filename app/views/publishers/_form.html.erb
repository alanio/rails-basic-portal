<%= simple_form_for @publisher, :html => { :class => 'form-vertical' } do |f| %>
	<div class="form-inputs">
		<%= f.input :name %>
		<%= f.input :status %>
	</div>	
	<div class="form-actions">
	  	<%= f.button :submit, :class => 'btn-primary' %>
	  	<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		publishers_path, :class => 'btn btn-default' %>
	</div>
<% end %>
